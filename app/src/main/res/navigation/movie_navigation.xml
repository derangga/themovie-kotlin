<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/movie_navigation"
        app:startDestination="@id/homeFragment">

    <fragment
            android:id="@+id/upcomingFragment"
            android:name="com.themovie.ui.discover.UpcomingFragment"
            android:label="fragment_upcoming"
            tools:layout="@layout/fragment_upcoming" >
        <action
                android:id="@+id/action_upcomingFragment_to_homeFragment"
                app:destination="@id/homeFragment" />
    </fragment>
    <fragment
            android:id="@+id/homeFragment"
            android:name="com.themovie.ui.main.HomeFragment"
            android:label="HomeFragment" >
        <action
                android:id="@+id/action_homeFragment_to_upcomingFragment"
                app:destination="@id/upcomingFragment" />
        <action
                android:id="@+id/action_homeFragment_to_genresFragment"
                app:destination="@id/genresFragment" />
        <action
                android:id="@+id/action_homeFragment_to_tvFragment"
                app:destination="@id/tvFragment" />
        <action
                android:id="@+id/action_homeFragment_to_moviesFragment"
                app:destination="@id/moviesFragment" />
    </fragment>
    <fragment
            android:id="@+id/genresFragment"
            android:name="com.themovie.ui.genres.GenresFragment"
            android:label="fragment_genres"
            tools:layout="@layout/fragment_genres" >
        <action
                android:id="@+id/action_genresFragment_to_homeFragment"
                app:destination="@id/homeFragment" />
    </fragment>
    <fragment
            android:id="@+id/tvFragment"
            android:name="com.themovie.ui.discover.TvFragment"
            android:label="fragment_tv"
            tools:layout="@layout/fragment_tv" >
        <action
                android:id="@+id/action_tvFragment_to_homeFragment"
                app:destination="@id/homeFragment" />
    </fragment>
    <fragment
            android:id="@+id/moviesFragment"
            android:name="com.themovie.ui.discover.MoviesFragment"
            android:label="fragment_movies"
            tools:layout="@layout/fragment_movies" >
        <action
                android:id="@+id/action_moviesFragment_to_homeFragment"
                app:destination="@id/homeFragment" />
    </fragment>
</navigation>