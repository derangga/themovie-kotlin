<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_upcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/medium_space"
                android:paddingStart="@dimen/medium_space"
                android:paddingEnd="@dimen/medium_space">

            <View
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="@drawable/ic_rectangle_rounded"
                    android:layout_marginBottom="12dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_space"
                    android:orientation="horizontal">

                <View
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:layout_marginBottom="12dp"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small_space"
                        android:paddingStart="@dimen/small_space"
                        android:paddingEnd="@dimen/small_space">

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/shimer_line_height"
                            android:layout_marginBottom="8dp"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_space"
                    android:orientation="horizontal">

                <View
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:layout_marginBottom="12dp"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small_space"
                        android:paddingStart="@dimen/small_space"
                        android:paddingEnd="@dimen/small_space">

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/shimer_line_height"
                            android:layout_marginBottom="8dp"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_space"
                    android:orientation="horizontal">

                <View
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ic_rectangle_rounded"
                        android:layout_marginBottom="12dp"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/extra_small_space"
                        android:paddingStart="@dimen/small_space"
                        android:paddingEnd="@dimen/small_space">

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/shimer_line_height"
                            android:layout_marginBottom="8dp"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </com.facebook.shimmer.ShimmerFrameLayout>

</FrameLayout>