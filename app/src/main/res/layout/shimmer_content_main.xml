<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mdmv_card"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:elevation="6dp"
        android:layout_margin="5dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_upcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/shimmer_poster"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:background="@drawable/ic_rectangle_rounded"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/small_space"/>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/shimmer_poster"
                        android:layout_toEndOf="@id/shimmer_poster"
                        android:paddingStart="@dimen/small_space"
                        android:paddingEnd="@dimen/small_space">

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="200dp"
                            android:layout_height="@dimen/shimer_line_height"
                            android:layout_marginBottom="8dp"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                    <View
                            android:background="@color/shimmerLineColor"
                            android:layout_width="match_parent"
                            android:layout_marginBottom="8dp"
                            android:layout_height="@dimen/shimer_line_height"/>

                </LinearLayout>



            </RelativeLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>