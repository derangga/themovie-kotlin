<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm" type="com.themovie.ui.detail.viewmodel.DetailMvViewModel"/>
        <import type="android.view.View"/>
    </data>

    <androidx.core.widget.NestedScrollView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:background="@color/colorPrimaryDark"
               tools:context=".ui.detail.DetailMovieFragment">

        <!-- TODO: Update blank fragment layout -->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <include
                    android:id="@+id/dt_shimmer"
                    layout="@layout/shimmer_content_main"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/dt_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                <ImageView
                        android:id="@+id/detail_img"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:tint="#11000000"
                        android:background="@color/colorWhite"
                        android:scaleType="centerCrop"
                        app:loadImage="@{vm.backdropImage}"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <View
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        android:background="@color/colorBlack"
                        android:alpha=".1"
                        android:id="@+id/vw_blacklayer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_detail"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:layout_marginStart="@dimen/small_space"
                        android:layout_marginEnd="@dimen/small_space"
                        app:cardCornerRadius="@dimen/small_space"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:elevation="8dp"
                        app:layout_constraintTop_toBottomOf="@id/detail_img"
                        app:layout_constraintBottom_toBottomOf="@id/detail_img">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingStart="0dp"
                            android:paddingEnd="@dimen/extra_small_space">

                        <ImageView
                                android:id="@+id/poster_img"
                                android:layout_width="108dp"
                                android:layout_height="match_parent"
                                android:fitsSystemWindows="true"
                                app:loadImage="@{vm.imageUrl}"
                                android:scaleType="centerCrop"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                        <TextView
                                android:id="@+id/title"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_small_space"
                                android:layout_marginTop="@dimen/extra_small_space"
                                android:textColor="@color/colorAccent"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="@{vm.title}"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/poster_img"
                                app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                                android:id="@+id/genre"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/extra_small_space"
                                android:textColor="@color/colorWhite"
                                android:text="@{vm.genre}"
                                android:layout_marginStart="@dimen/extra_small_space"
                                android:layout_marginTop="4dp"
                                app:layout_constraintStart_toEndOf="@id/poster_img"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/title"/>

                        <TextView
                                android:id="@+id/release"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:text="@{vm.releaseDate}"
                                android:layout_marginStart="@dimen/extra_small_space"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@id/genre"
                                app:layout_constraintStart_toEndOf="@id/poster_img"
                                app:layout_constraintEnd_toEndOf="parent"/>

                        <LinearLayout
                                android:id="@+id/rate_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="4dp"
                                app:layout_constraintTop_toBottomOf="@id/release"
                                app:layout_constraintStart_toStartOf="@id/reviewers"
                                app:layout_constraintEnd_toEndOf="@id/reviewers">

                            <TextView
                                    android:id="@+id/rating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorAccent"
                                    android:layout_marginEnd="4dp"
                                    android:textSize="18sp"
                                    android:text="@{vm.rating}"/>

                            <ImageView
                                    android:id="@+id/start_img"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_rate"/>

                        </LinearLayout>

                        <TextView
                                android:id="@+id/reviewers"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/extra_small_space"
                                android:layout_marginTop="4dp"
                                android:textColor="@color/colorWhite"
                                android:textSize="11sp"
                                android:text="@{vm.totalVote}"
                                app:layout_constraintTop_toBottomOf="@id/rate_layout"
                                app:layout_constraintStart_toEndOf="@id/poster_img"
                                tools:ignore="SmallSp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                        android:id="@+id/synopsis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        android:text="@string/detail_title_4"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginStart="@dimen/small_space"
                        app:layout_constraintTop_toBottomOf="@id/card_detail"
                        app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                        android:id="@+id/overview"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:text="@{vm.description}"
                        android:layout_marginTop="@dimen/extra_small_space"
                        android:layout_marginStart="@dimen/small_space"
                        android:layout_marginEnd="@dimen/small_space"
                        app:layout_constraintTop_toBottomOf="@id/synopsis"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_cast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/overview"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_title_7"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/small_space"
                                android:textColor="@color/colorAccent"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/small_space"
                                android:layout_marginStart="@dimen/small_space"
                                android:layout_marginEnd="@dimen/small_space"
                                android:background="@color/colorBlue"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dt_castList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_video"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/card_cast">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_title_18"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/small_space"
                                android:textColor="@color/colorAccent"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/small_space"
                                android:layout_marginStart="@dimen/small_space"
                                android:layout_marginEnd="@dimen/small_space"
                                android:background="@color/colorBlue"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dt_video_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                        </androidx.recyclerview.widget.RecyclerView>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_recommended"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/card_video">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_title_8"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_margin="@dimen/small_space"
                                android:textColor="@color/colorAccent"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="@dimen/small_space"
                                android:layout_marginStart="@dimen/small_space"
                                android:layout_marginEnd="@dimen/small_space"
                                android:background="@color/colorBlue"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dt_recom_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp">

                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                                android:id="@+id/dt_recom_empty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/detail_title_9"
                                android:layout_marginBottom="8dp"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:visibility="gone"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:id="@+id/card_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_space"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:layout_constraintTop_toBottomOf="@id/card_recommended">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="@dimen/extra_small_space"
                            android:paddingEnd="@dimen/extra_small_space"
                            android:paddingTop="@dimen/extra_small_space">

                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_title_10"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="@color/colorAccent"/>

                        <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="@dimen/small_space"
                                android:layout_marginBottom="@dimen/small_space"
                                android:background="@color/colorBlue"/>

                        <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/dt_reviewList"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </androidx.recyclerview.widget.RecyclerView>

                        <TextView
                                android:id="@+id/dt_review_empty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:text="@string/detail_title_13"
                                android:layout_marginBottom="8dp"
                                android:textAlignment="center"
                                android:textColor="@color/colorWhite"
                                android:visibility="gone"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                    android:id="@+id/dt_no_internet"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_centerInParent="true">

                <ImageView
                        android:src="@drawable/no_internet"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"/>

                <TextView
                        android:layout_marginTop="@dimen/small_space"
                        android:text="@string/detail_title_11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"/>

                <Button
                        android:id="@+id/dt_retry"
                        android:layout_marginTop="@dimen/small_space"
                        android:text="@string/detail_title_12"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/btn_rounded"
                        android:layout_gravity="center_horizontal"/>

            </LinearLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</layout>