<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mdmv_card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="6dp"
        android:layout_margin="5dp">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_upcoming"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_circle"/>

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/shimmer_poster"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_circle"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="13dp" />

                <View
                    android:id="@+id/shimmer_title"
                    android:background="#DFDFDF"
                    android:layout_width="200dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_alignTop="@+id/shimmer_poster"
                    android:layout_toEndOf="@id/shimmer_poster"/>

                <View
                    android:id="@+id/shimmer_content1"
                    android:background="#DFDFDF"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/shimmer_title"
                    android:layout_toEndOf="@id/shimmer_poster"/>

                <View
                    android:id="@+id/shimmer_content2"
                    android:background="#DFDFDF"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/shimmer_content1"
                    android:layout_toEndOf="@id/shimmer_poster"/>

            </RelativeLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>