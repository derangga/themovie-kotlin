<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:paddingStart="@dimen/medium_space"
        android:paddingEnd="@dimen/medium_space">

    <ImageView
            android:id="@+id/h_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow"
            android:layout_marginEnd="@dimen/extra_medium_space"
            android:layout_centerVertical="true"/>

    <TextView
            android:id="@+id/h_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/title_main_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/h_back"/>

    <LinearLayout
            android:id="@+id/h_title_layout"
            android:layout_toEndOf="@id/h_back"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/searchbox_bg">

        <ImageView
                android:id="@+id/h_search"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_search"
                android:layout_marginEnd="@dimen/medium_space"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_main_6"
                android:maxLength="24"/>

    </LinearLayout>

</RelativeLayout>